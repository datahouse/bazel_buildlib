"""node_modules_bin_path util."""

load("@bazel_skylib//lib:paths.bzl", "paths")

def node_modules_bin_path(path_prefix):
    """Generate a PATH value containing the .bin directory of the given node_modules (and common paths)."""

    return ":".join([
        paths.join(path_prefix, "node_modules/.bin"),
        "/usr/local/sbin",
        "/usr/local/bin",
        "/usr/sbin",
        "/usr/bin",
        "/sbin",
        "/bin",
    ])
